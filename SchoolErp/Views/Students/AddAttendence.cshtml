
@{
    ViewBag.Title = "AddAttendence";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}





<br />
<div class="row clearfix">
    <div class="col-md-12" style="">
        <div class="card">
            <div class="header">
                <h5>AddAttendence</h5>
            </div>
            <div class="body">
                <form id="basic-form" method="post" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Date</label>
                                <input type="date" name="password" id="date" class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label>Class</label>
                                <select id="E_Class" class="form-control" onchange="GetSection()" required>
                                    <option value="">Select...........</option>
                                    @foreach (var item in ViewBag.cl)
                                    {
                                        <option value="@item.Class_Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Section</label>
                                <select id="E_Section" class="form-control" onchange="GetStudent()" required></select>
                            </div>

                          
                            <div class="tbl-content">
                                <table cellpadding="0" cellspacing="0" border="1">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th class="table-dark">Roll No#</th>
                                            <th class="table-dark">Status</th>
                                           
                                        </tr>
                                    </thead>
                                    <tbody id="attend"></tbody>
                                </table>
                            </div>


                            <br>

                        </div>
                    </div>

                    <button type="button" class="btn  btn-primary btn-block col-md-6" onclick="AddAttendence()">Save</button>
                </form>
            </div>
        </div>
    </div>

</div>
<script src="~/asset/Common.js"></script>
<script src="~/jquery/StudentAttendence.js"></script>


